<% layout('../layout') -%>
<div class="loader"></div>
    <header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner" ng-controller="LoginController">
        <div class="container-fluid">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">
                    <img id="brand-img" width="66px;" src="/images/movie-icon.png" />
                    <span class="brand">My<strong>Cinema</strong>
                    </span>
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                <ul class="nav navbar-nav navbar-right">                  
                    <li ng-show="user._id" ng-cloak>
                        <a href="/create">
                            <i class="fa fa-plus"></i> Tạo phim</a>
                    </li>
                    <li ng-show="!user._id" ng-cloak>
                        <a href="/register">
                            <i class="fa fa-user-plus"></i> Đăng ký</a>
                    </li>              
                    <li ng-show="!user._id" ng-cloak>
                        <a href="/login">
                            <i class="fa fa-sign-in"></i> Đăng nhập</a>
                    </li>

                </ul>
            </nav>
        </div>
    </header>
    <div id="login-container" class="parent" ng-controller="LoginController">
        <div class="container">
            <div class="col-md-6 col-md-offset-3">
                <form name="createForm" ng-validate="validationOptions" class="sign-up-form">
                    <div class="col-md-12">
                        <h1 class="text-center"><strong>Đăng Nhập</strong></h1>
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input name="email" ng-model="email" type="text" class="form-control" id="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="pwd">Mật khẩu:</label>
                        <input name="password" ng-model="password" type="password" class="form-control" id="pwd" placeholder="Mật khẩu">
                    </div>
                    <div class="row">
                        <div class="col-md-6"><a data-toggle="modal" data-target="#myModal" class="forgot-link" href="#">Quên
                                mật khẩu ?</a></div>
                        <button type="submit" ng-click="login()" id="register-button" class="btn-login create-form-button btn btn-primary">Đăng
                            nhập
                        </button>
                    </div>
                    <hr>
                    <div class="row external-login-content">
                        <div class="col-md-6">
                            <a href="/api/auth/google" class="btn btn-block btn-social btn-lg btn-google">
                                <span class="fa fa-google"></span> Google
                            </a>
                        </div>
                        <div class="col-md-6">
                            <a href="/api/auth/facebook" class="btn btn-block btn-social btn-lg btn-facebook">
                                <span class="fa fa-facebook"></span> Facebook
                            </a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h3 class="text-center modal-title my-modal-title">Khôi phục mật khẩu</h3>
                    </div>
                    <form name="emailForm" ng-validate="validationOptions">
                        <div class="modal-body text-center">
                            <div class="form-group">
                                <label for="email">Nhập email của bạn:</label>
                                <input name="email" ng-model="confirmEmail" type="text" class="form-control" placeholder="Email">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" ng-click="forgotPassword()" class="create-form-button btn btn-primary">Gửi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    <script src="/javascripts/shared/angular-validate.js"></script>
    <script src="/javascripts/shared/common.js"></script>
    <script src="/javascripts/auth/login.js"></script>