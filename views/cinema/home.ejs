<% layout('../layout') -%>
    <div ng-controller="HomeController">
        <div class="container-fluid">
            <div class="row">

                <div ng-repeat="movie in movies" class=" col-md-4 col-sm-6 col-xs-12">
                    <div class="item">
                        <div class="item-movie">
                            <a ng-href="/detail/{{movie._id}}" type="button" class="btn-detail btn btn-primary">
                                <i class="fa fa-info-circle"></i>
                            </a>
                            <img src="/images/movie-image.jpg">
                            <div class="about">
                                <h2>{{movie.movieName}}</h2>
                                <label class="date">
                                    {{movie.publicDate | date: 'dd/MM/yyyy'}}
                                </label>
                                <p>
                                    {{movie.description}}
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/javascripts/cinema/home.js"></script>