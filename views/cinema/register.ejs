<% layout('../layout') -%>
    <div class="parent" ng-controller="RegisterController">
        <div class="container">
            <div class="col-md-6 col-md-offset-3">
                <form name="createForm" ng-validate="validationOptions" class="sign-up-form">
                    <div class="col-md-12">
                        <h1 class="text-center"><strong>Đăng Ký</strong></h1>
                    </div>
                    <div class="form-group">
                        <label for="name">Tên người dùng:</label>
                        <input name="username" ng-model="username" type="text" class="form-control" placeholder="Nhập tên người dùng">
                    </div>
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input name="email" ng-model="email" type="text" class="form-control" id="email" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="pwd">Mật khẩu:</label>
                        <input name="password" ng-model="password" type="password" class="form-control" id="pwd">
                    </div>
                    <div class="form-group">
                        <label for="pwd">Nhập lại mật khẩu:</label>
                        <input name="confirmPassword" type="password" class="form-control">
                    </div>
                    <button type="submit" ng-click="createUser()" id="register-button" class="create-form-button btn btn-primary">Đăng ký</button>
                </form>
            </div>
        </div>
    </div>
    </div>
    <script src="/javascripts/shared/angular-validate.js"></script>
    <script src="/javascripts/shared/common.js"></script>
    <script src="/javascripts/auth/register.js"></script>