<% layout('../layout') -%>
    <header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="banner" ng-controller="ProfileController">
        <div class="container-fluid">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">
                    <img id="brand-img" width="66px;" src="/images/movie-icon.png" />
                    <span class="brand">My<strong>Cinema</strong>
                    </span>
            </div>
            <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
                <ul class="nav navbar-nav navbar-right">
                    <li ng-show="user._id" ng-cloak>
                        <a ng-href="/user/{{user._id}}">
                            <i class="fa fa-user" aria-hidden="true"></i> {{user.username}}</a>
                    </li>
                    <li ng-show="user._id" ng-cloak>
                        <a href="/create">
                            <i class="fa fa-user-plus"></i> Tạo phim</a>
                    </li>
                    <li ng-show="user._id" ng-cloak>
                        <a href="" ng-click="signout()">
                            <i class="fa fa-sign-out"></i> Đăng xuất</a>
                    </li>


                </ul>
            </nav>
        </div>
    </header>
    <div id="login-container" class="parent" ng-controller="ProfileController">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3 text-center">
                    <!-- <input id="inputFile" type="file" accept="image/x-png,image/jpeg">
                            <button id="btnAddImage" class="create-form-button btn btn-primary" ng-click="addImage()"> -->
                    <button id="btnAddImage" class="create-form-button btn btn-primary" ng-click="addImage()">Hủy</button>
                    <button id="btnCreate" type="submit" class="create-form-button btn btn-primary" ng-click="showInput()">Sửa</button>
                    <img id="user-avatar" width="200px" height="200px" src="/images/user-icon.png">
                </div>
                <div class="col-md-12 text-center">
                    <button class="create-form-button btn btn-primary" ng-click="addImage()">
                        <i class="fa fa-upload" aria-hidden="true"></i> Thêm hình</button>
                    <input id="inputFile" type="file" accept="image/x-png,image/jpeg">
                </div>
                <div id="user-form" class="col-md-8 col-md-offset-2">
                    <h2 class="text-center"><strong>Thông tin người dùng</strong></h2>
                    <form>
                            <div class="form-group">
                                    <label for="name">Tên người dùng:</label>
                                    <p class="user-profile">{{user.username}}</p>
                                    <input style="display: none" name="name" ng-model="username" type="text" class="form-control" placeholder="Nhập tên người dùng">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email:</label>
                                    <input style="display: none" name="email" ng-model="email" type="text" class="form-control" id="email" placeholder="Email" disabled>
                                    <p class="user-profile">{{user.email}}</p>
                                </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
    <script src="/javascripts/shared/angular-validate.js"></script>
    <script src="/javascripts/shared/common.js"></script>
    <script src="/javascripts/user/profile.js"></script>